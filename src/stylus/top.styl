.main-top
  margin-top 0
  mt-sm 0
  mt-xs 0
  .return-top
    position absolute
    bottom 100px
    b-sm 15 + 45px
    w-xs 100%
    pr-xs 20px
    img
      w-xs 22px

  + .pagination
    font-size 0
    dn-xs()
    position fixed
    top 50%
    left -380px
    l-sm -235px
    z-index 100
    transform translateY(-50%)
    @media (min-width: 768px) and (max-height:880px)
      top 320px
      transform none
    img
      height 30px
      h-sm 18px
      width auto
      vertical-align middle
    span
      vertical-align middle
      display inline-block
      font-size 13px
      fz-sm 10
      opacity 0
      transition opacity .3s
    .color-name
      margin-left 30px
      ml-sm 22px
      width 60px
      w-sm 45px
      text-transform: uppercase;
    a
      display block
      color #fff
      &:hover
        opacity 1
    li
      position relative
      &::after
        content ""
        display inline-block
        width 8px
        height 8px
        sz-sm(5px, 5px)
        position absolute
        background-color #fff
        border-radius 100px
        left: 420px
        l-sm 255px
        margin auto
        top 0
        bottom 0
      &:hover span
        opacity 1

    li + li
      margin-top 15px
      mt-sm 12px
      @media (min-width: 768px) and (max-height:980px)
        margin-top 10px

.fp-viewing-white
.fp-viewing-black
  .pagination
    li
      span
        color #999
      &::after
        background-color #999

.fp-viewing-top
.fp-viewing-sns
.fp-viewing-caution
.fp-viewing-about
