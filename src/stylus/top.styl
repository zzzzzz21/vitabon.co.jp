.section
  bg(center, center)
  background-size cover
  width 100%
  height 100%

.link-up
.link-down
  position absolute
  width 100%
  bg(center, center)
  opacity .6
  height 100px
  h-sm 50px
  display inline-block
  z-index 700
  dn-xs()
  bgsz-sm(25px auto)

.link-up
  top 85px
  t-sm 45px
  background-image url(path_image/arrow_up.png)
.link-down
  bottom 0
  background-image url(path_image/arrow_down.png)

.billboard-top
  background-image url(path_image/billboard_top.jpg)
  background-position 50% 85px
  sm({
    background-position: 50% 45px
  })
  xs({
    background-image: url(path_image/billboard_top_sp.jpg)
    background-position: 100% 45px
  })
  .link-down
    db-xs()
    xs({
      background-color: #333
      bottom: 0
      width: 100%
      height:44px
      opacity: 1
      background-size: 30px
    })
  > .copy
    position absolute
    top 60 + 85 px
    @media (min-width: 768px) and (max-height:850px)
      font-size 45px
      top 105px
    t-sm 35 + 45 px
    t-xs 12 + 45 px
    left 85px
    l-sm 45px
    l-xs 8px
    font-size 82px
    fz-sm 45px
    fz-xs 20
    text-shadow 0 0 5px alpha(#d794b6, .13)
    letter-spacing .15em
    color #fff
    line-height (102 / 82)
    lh-xs(83/67)
  .product
    dn-xs()
    position absolute
    bottom (120 / 1090 * 100)%
    left 85px
    l-sm 45px
    .copy
      font-size 24px
      fz-sm 13px
      color #8f7263
      margin-left 30px
      ml-sm 15px
      margin-bottom 20px
      mb-sm 10px
      @media (min-width: 768px) and (max-height:850px)
        font-size 18px
        margin-left 15px
        margin-bottom 10px
    li
      font-size 13px
      fz-sm 11px
      img
        vertical-align middle
        w-sm 260px
        h-sm auto
      a
        display block
        color #fff
        .name
        .color-name
          display inline-block
          vertical-align middle
        .color-name
          text-transform: uppercase;
          margin-left 18px
          ml-sm 10px
          width 60px
          w-sm 55px
      + li
        margin-top 20px
        mt-sm 10px
        @media (min-width: 768px) and (max-height:850px)
          margin-top 10px
  .font-zero
    dn-xs()
    position absolute
    right 35px
    r-sm 20px
    bottom 40px
    b-sm 20px
    width 100px
    w-sm 55px
    height 133px
    h-sm 70px
    img
      width 100%
      height auto

