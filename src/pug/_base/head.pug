meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible' content='IE=edge')
meta(name='viewport' content='width=device-width, initial-scale=1')
title= TITLE[pId]
link(rel='icon' type='image/vnd.microsoft.icon' href=root+PATH.image+'/favicon.ico')
meta(property='og:locale' content='ja_JP')
meta(property='og:title' content=TITLE[pId])
if (pId == 'top')
  meta(property='og:type' content='website')
else
  meta(property='og:type' content='article')
if OGP
  meta(property='og:image' content=OGP)
meta(property='og:url' content=URL+LINK[pId])
meta(property='og:site_name' content=SITE_NAME)
meta(property='og:description' content=DESCRIPTION[pId])
meta(name='keywords' content=KEYWORD[pId])
meta(name='description' content=DESCRIPTION[pId])

if GAUA
  +ga(GAUA)

block css
  if (pId == 'top')
    link(href=root+PATH.lib+'/jquery.fullpage/jquery.fullpage.min.css' rel='stylesheet')
  link(href=root+PATH.css+'/style.css' rel='stylesheet')
